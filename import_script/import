#!/bin/sh
svn export --force svn+ssh://cube@sparror.cubecinema.com/home/cube/svn-repo/TRUNK/cgi-bin/events/data/formats

set -e # Abort on errors

TOOLKIT_PATH=..
IMAGE_PATH=~/data/rails/toolkit/public/images

rsync -av --no-r $IMAGE_PATH/events/* $TOOLKIT_PATH/media/event/
rsync -av --no-r $IMAGE_PATH/events/thumb/* $TOOLKIT_PATH/media/event_thumbnails/

export PYTHONPATH=$PYTHONPATH:$TOOLKIT_PATH
export DJANGO_SETTINGS_MODULE=settings

python $TOOLKIT_PATH/manage.py reset diary --noinput
python import.py

